#!/bin/sh 

repo_alias=$1

repo_name=
case "$repo_alias" in
    LLC)    
        repo_name=ledger-live-common
        ;;
    LLD)
        repo_name=ledger-live-desktop
        ;;
    LLM)
        repo_name=ledger-live-mobile
        ;;
    *)
        repo_name=$1
        ;;
esac

cd "$GIT_CLONE_PATH/$repo_name" || {
    echo "moving to $GIT_CLONE_PATH instead"
    cd "$GIT_CLONE_PATH" || exit
}
echo "ðŸ’» Happy coding!"
